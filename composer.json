{
    "name": "nochso/phormat",
    "description": "PHP source formatter with a single style - essentially godoc for PHP",
    "type": "application",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Voigt",
            "email": "mv@noch.so"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "aura/cli": "^2.1",
        "nikic/php-parser": "^2.1.0",
        "nette/finder": "^2.3",
        "nochso/diff": "dev-master",
        "nochso/omni": "^0.3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "nochso/writeme": "dev-master",
        "nochso/benchmark": "^0.5.3"
    },
    "autoload": {
        "psr-4": {
            "nochso\\Phormat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "nochso\\Phormat\\Test\\": "test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["phormat"],
    "scripts": {
        "box": [
            "composer install --no-dev -o",
            "box build -v"
        ],
        "box-install": [
            "@box",
            "sudo cp phormat.phar /usr/local/bin/phormat"
        ]
    }
}
