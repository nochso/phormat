{
    "name": "nochso/phormat",
    "description": "PHP source formatter with a single style - essentially godoc for PHP",
    "type": "application",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Voigt",
            "email": "mv@noch.so"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "aura/cli": "^2.1",
        "nikic/php-parser": "dev-master",
        "nette/finder": "^2.3",
        "nochso/diff": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "nochso\\Phormat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "nochso\\Phormat\\Test\\": "test/"
        }
    },
    "bin": ["phormat"]
}
